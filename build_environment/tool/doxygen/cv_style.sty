% Simple LaTeX adjustments for CV formatting
\ProvidesPackage{cv_style}

% Use Times font
\RequirePackage{times}

% Ultra-compact margins (aligned with latex_header.tex)
\RequirePackage[top=0.8cm, bottom=0.6cm, left=1.0cm, right=1.0cm]{geometry}

% Remove page style
\pagestyle{empty}

% Ultra-tight spacing
\RequirePackage{titlesec}
\titlespacing*{\section}{0pt}{4pt plus 1pt}{2pt plus 1pt}
\titlespacing*{\subsection}{0pt}{3pt plus 1pt}{1pt plus 1pt}

% Center section titles
\titleformat{\section}{\centering\normalfont\large\bfseries}{\thesection}{1em}{}

% Minimal paragraph spacing
\setlength{\parindent}{0pt}
\setlength{\parskip}{1pt plus 1pt}
